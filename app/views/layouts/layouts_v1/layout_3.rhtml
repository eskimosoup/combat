<?xml version="1.0" encoding="iso-8859-1"?><!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN""http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"><html xml:lang="en" lang="en" xmlns="http://www.w3.org/1999/xhtml"><head><title><%= @company_name_for_layout %> - <%= @page_title %></title><%= stylesheet_link_tag "layout_3.css" %><%= javascript_include_tag "prototype" %><%= javascript_include_tag "swfobject" %><% if @include_tinymce_script -%>  <%= javascript_include_tag "tiny_mce/tiny_mce.js" %>  <%= javascript_include_tag "tiny_mce_config" %><% end -%><!--meta data start--><meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" /><meta name="robots" content="NOODP" /><% if @metatitle%><meta name="title" content="<%= @metatitle %>" /><% end %><% if @metakeywords%><meta name="keywords" content="<%= @metakeywords %>" /><% end %><% if @metadescription%><meta name="description" lang="en" content="<%= @metadescription %>" /><%end%><!--meta data end--></head><body><div id="maincontainer"><p class="skip"><a href="#content" accesskey="s">Skip to the main content</a></p>                <div id="top">                <%= link_to image_tag("../images/layout_3/logo.gif", :alt => " ", :title => " ", :border => "0", :hspace => "0", :vspace => "0", :class => "logo")+ '', {:controller => 'web', :action => 'index'}, {:accesskey => "0"} %>                        <div><%= link_to(image_tag("../images/layout_3/icon_email.gif", :alt => "Email", :title => "Email", :border => "0", :hspace => "0", :vspace => "0") + "<br /> email", :controller => "web", :action => "contact") %></div>                        <div><%= link_to(image_tag("../images/layout_3/icon_home.gif", :alt => "Home", :title => "Home", :border => "0", :hspace => "0", :vspace => "0") + "<br /> home", :controller => "web", :action => "index") %></div>                </div>                <div class="content_container">                        <div id="side">                                <div id="navigation">                  <% for i in (2..5).to_a %>                    <% action = "content"+i.to_s %>                    <% page = ContentPage.find_by_url("web", action) %>                    <%= link_to page.button_text, {:controller => "web", :action => action}, {:accesskey => i.to_s} %>                  <% end %>                  <%= link_to @dm_one['plural'].capitalize, {:controller => "article", :action => "index"}, {:accesskey => "6"} %>                  <%= link_to "Contact us", {:controller => "web", :action => "contact"}, {:accesskey => "7"} %>                                </div>                                <div>                          <h2>Latest <%= @dm_one['plural'].capitalize %></h2>                          <% articles = Article.find_latest_n(2) %>                          <div>                          <% for article in articles %>                                <%= link_to article.name, :controller => "article", :action=>"show", :id => article.id %><br />                                <% if article.picture1 -%>                                <%= link_to (scale_image_tag article.picture1, :width=>"61", :height=>"61", :border=>"0"), :controller => "article", :action => "show", :id => article.id %>                                <% end -%>                                <span class="font_grey">[ <%= article.article_date.strftime("%d.%m.%Y") %> ]</span><br />                                <%= article.summary %>                                <% unless article == articles.last %> <hr /> <% end %>                          <% end %>                          </div>                                </div>                        </div>                        <div id="content">                                <%= @content_for_layout %>                        </div>                        <div id="footer">                                        <%= link_to "&copy; #{@company_name_for_layout} " + Date.today.year.to_s, :action=>"index" %> | <a href="http://www.web2grow.co.uk" target="_blank">Web Design</a> <span style="margin: 0px -4px 0px -4px;">By</span> <a href="http://www.web2grow.co.uk" target="_blank">Web2Grow</a> | <%= link_to "Accessibility", {:controller => "web", :action => "accessibility"}, {:accesskey => "1"} %> | <a href="http://validator.w3.org/check?uri=referer" target="_blank" class="footer">Valid XHTML</a> | <a href="http://jigsaw.w3.org/css-validator/check/referer" target="_blank" class="footer">Valid CSS</a>                        </div>                </div></div></body></html>