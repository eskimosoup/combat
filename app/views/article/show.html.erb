<% @page_title = @dm_one['plural'].capitalize %><h1><%= h @article.name %></h1><%= render :partial => 'navigation' %><div id="news">  <% if @article.has_picture1? -%>    <%= thumbnail_tag(@article.picture1, :width => 150, :class => "image", :border => "0", :alt => h(@article.picture1.image_alt)) %>  <% end -%>  <%= @article.body %>  <% tags = @article.tag_array -%>  <% unless tags.empty? -%>    <div class="category">(Within categories:<% for tag in tags -%>       <%= link_to(tag.humanize, :controller => 'article', :action => 'list', :tag => tag)%>    <% end %>)</div>  <% end -%>    <hr />        <p align="right"><%= link_to 'Go back', :action => 'list' %> to the <%= @dm_one['plural'].downcase %>.</p></div>