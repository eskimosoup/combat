<% @page_title = "Articles" %><h1><%= @page_title %></h1><%= render :partial => 'story_navigation' %><div id="news"><% if @list_name -%>  <h2><%= @list_name%></h2><% else -%>  <h2><%= month_name(session[:month].to_i) + " - " + params[:year].to_s %></h2><% end -%>  <% if @stories.length != 0 -%>  <% for story in @stories -%>    <hr />    <%= render( :partial => 'story_summary',                      :locals => {:story => story}) %>  <% end -%>    <hr />  <% else -%>  <p><strong>There are currently no stories to be displayed.</strong></p>  <% end -%>  <% if @story_pages.count != 0 %>  <div class="pagecount">    <% if @story_pages.previous_page -%>      <%= link_to '&lt;&lt; Back', :action => 'show_stories', :page => @story_pages.previous_page %>    <% end -%>    <%= @story_pages.range %> of <%= @story_pages.count %>    <% if @story_pages.next_page -%>      <%= link_to 'Next &gt;&gt;', :action => 'show_stories', :page => @story_pages.next_page %>    <% end -%>  </div><% end %></div>