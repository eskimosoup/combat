<% @page_title = "Contact Us" %><h1><%= @page_title %></h1><% unless @site_profile.address.empty? -%>  <p><strong>A:</strong> <%= @site_profile.address.gsub(/\n/, "<br />") %></p><% end -%><% unless @site_profile.phone_number.empty? -%>  <p><strong>T:</strong> <%= @site_profile.phone_number %></p><% end -%><% unless @site_profile.fax_number.empty? -%>  <p><strong>F:</strong> <%= @site_profile.fax_number %></p><% end -%><% unless @site_profile.email.empty? -%>  <p><strong>E:</strong> <a href="mailto:<%= @site_profile.email %>"><%= @site_profile.email %></a></p>       <% end -%>		<%= form_tag({:controller => 'web', :action => 'contact_recieved'},                              :name => 'contact_form') %>		<p>          <label for="customer_name">Name</label>          <%= text_field :customer, :name %>        </p>        <p>           <label for="customer_phone">Telephone</label>          <%= text_field :customer, :phone %>        </p>        <p>           <label for="customer_email">E-Mail</label>          <%= text_field :customer, :email %>        </p>        <p>           <label for="customer_enquiry">Enquiry</label>          <%= text_area :customer, :enquiry %>        </p>           <p><input name="ContactSubmit" id="ContactSubmit" type="submit" value="Submit" class="submit" /></p>      </form>